<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">

    <EditText
            android:id="@+id/in_title"
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:hint="Title"
            android:capitalize="sentences"
            android:singleLine="true"
            android:maxLength="25"/>

    <EditText
            android:id="@+id/in_description"
            android:padding="6dp"
            android:layout_below="@id/in_title"
            android:layout_width="364dp"
            android:layout_height="155dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:hint="Description..."
            android:capitalize="sentences"
            android:maxLength="250"/>

    <ImageView
            android:id="@+id/iv_thumbnail"
            android:src="@drawable/button_hashtag_blue"
            android:paddingTop="0dp"
            android:layout_below="@id/in_description"
            android:layout_width="184dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp" />

    <Button
            android:id="@+id/timepicker"
            android:text=""
            android:layout_below="@id/in_description"
            android:layout_toRightOf="@id/iv_thumbnail"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

    <Button
            android:id="@+id/datepicker"
            android:text=""
            android:layout_below="@id/timepicker"
            android:layout_toRightOf="@id/iv_thumbnail"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

    <Button
            android:id="@+id/button_location"
            android:text="location"
            android:layout_below="@id/iv_thumbnail"
            android:layout_width="114dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp" />

    <Button
            android:id="@+id/button_tags"
            android:text="tags"
            android:layout_below="@id/iv_thumbnail"
            android:layout_toRightOf="@id/button_location"
            android:layout_width="115dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

    <Button
            android:id="@+id/button_hashtags"
            android:text="hashtags"
            android:layout_below="@id/iv_thumbnail"
            android:layout_toRightOf="@id/button_tags"
            android:layout_width="114dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

    <Button
            android:id="@+id/save_meta_data"
            android:text="save"
            android:layout_alignParentBottom="true"
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp" />

</RelativeLayout>