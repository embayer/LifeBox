<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectable="true"
                android:background="?android:attr/activatedBackgroundIndicator"
                android:descendantFocusability="blocksDescendants">

    <WebView
            android:id="@+id/musiclist_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp" />


    <TextView
            android:id="@+id/musiclist_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/musiclist_thumbnail"
            android:paddingLeft="6dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
            android:id="@+id/musiclist_artist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/musiclist_thumbnail"
            android:layout_below="@id/musiclist_title"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/musiclist_album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/musiclist_thumbnail"
            android:layout_below="@id/musiclist_artist"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>