<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectable="true"
                android:background="?android:attr/activatedBackgroundIndicator"
                android:descendantFocusability="blocksDescendants">

    <FrameLayout
            android:id="@+id/image_frame"
            android:layout_width="104dp"
            android:layout_height="104dp" >

        <ImageView
                android:id="@+id/thumbnail_imageview"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"/>

        <WebView
                android:id="@+id/movie_webview"
                android:layout_width="67dp"
                android:layout_height="100dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="17dp"/>

        <WebView
                android:id="@+id/music_webview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"/>

    </FrameLayout>


    <TextView
            android:id="@+id/timeline_date_textview"
            android:text="01.01.2013"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_frame"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/timeline_time_textview"
            android:text="23:55"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/timeline_date_textview"
            android:layout_below="@id/searchresult_title"
            android:paddingLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/timeline_title_textview"
            android:text="Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_frame"
            android:layout_below="@id/timeline_date_textview"
            android:paddingLeft="6dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
            android:id="@+id/timeline_firstline_textview"
            android:text="So much text, unbelievable,"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_frame"
            android:layout_below="@id/timeline_title_textview"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/timeline_secondline_textview"
            android:text="absolutely amazing!"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_frame"
            android:layout_below="@id/timeline_firstline_textview"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>