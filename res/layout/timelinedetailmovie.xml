<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/moviedetail_image_frame"
            android:background="@color/playcyan"
            android:layout_width="104dp"
            android:layout_height="104dp" >

        <WebView
                android:id="@+id/moviedetail_webview"
                android:layout_width="67dp"
                android:layout_height="100dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"/>

    </FrameLayout>

    <RelativeLayout
            android:id="@+id/moviedetail_text_frame"
            android:background="@color/playcyan"
            android:layout_toRightOf="@id/moviedetail_image_frame"
            android:layout_width="fill_parent"
            android:layout_height="104dp"
            android:padding="6dp">

        <TextView
                android:id="@+id/moviedetail_title_textview"
                android:text="title"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="6dp"/>

        <TextView
                android:id="@+id/moviedetail_director_textview"
                android:text="director"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/moviedetail_title_textview"
                android:paddingLeft="6dp"/>

        <TextView
                android:id="@+id/moviedetail_releasedate_textview"
                android:text="releasedate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/moviedetail_director_textview"
                android:paddingLeft="6dp"/>

        <TextView
                android:id="@+id/moviedetail_genre_textview"
                android:text="genre"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/moviedetail_releasedate_textview"
                android:paddingLeft="6dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/moviedetail_text_frame"
            android:background="@color/white"
            android:layout_below="@id/moviedetail_image_frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

        <TextView
                android:id="@+id/moviedetail_description_textview"
                android:text="description"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="6dp"
                android:layout_below="@id/moviedetail_image_frame"/>

    </RelativeLayout>

</RelativeLayout>