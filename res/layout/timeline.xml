<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/timeline_noentries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp">

    <TextView
            android:id="@+id/timeline_noentries_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="No entries found"
            android:textStyle="bold"
            android:textSize="30dp"/>

    <ImageView
            android:id="@+id/timeline_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/timeline_noentries_tv"
            android:src="@drawable/tag_smiley9_gray"/>

        <Button
            android:id="@+id/timeline_disablefilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeline_image"
            android:layout_marginTop="20dp"
            android:text="Disable filter" />

    </RelativeLayout>


    <ListView
            android:id="@+id/listview_timeline"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:listSelector="?android:attr/activatedBackgroundIndicator"
            android:choiceMode="singleChoice"
            android:clickable="true"/>

</RelativeLayout>